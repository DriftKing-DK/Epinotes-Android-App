        <Button
            android:id="@+id/drivetoulouse_button"
            android:drawableEnd="@drawable/epinotes_google_drive_logo"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:shadowColor="#FF000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/font1"
            android:background="@drawable/accueil_buttons_background"
            android:paddingEnd="40dp"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:focusable="true"
            android:text="Drive Toulouse" />

        <Button
            android:id="@+id/uploadCours_button"
            android:drawableEnd="@drawable/upload_btn_50px"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:shadowColor="#FF000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/font1"
            android:background="@drawable/accueil_buttons_background"
            android:paddingEnd="40dp"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:focusable="true"
            android:text="Uploader mes cours" />


        <Button
            android:id="@+id/parametres_button"
            android:drawableEnd="@drawable/parametres_btn_50px"
            android:layout_gravity="center"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:shadowColor="#FF000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/font1"
            android:background="@drawable/accueil_buttons_background"
            android:paddingEnd="40dp"
            android:paddingStart="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_margin="10dp"
            android:focusable="true"
            android:text="Paramètres" />


    </LinearLayout>

</ScrollView>
