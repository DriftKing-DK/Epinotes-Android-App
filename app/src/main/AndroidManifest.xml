<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.core2duofr.epinotes">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EPINOTES">
        <activity android:name=".EpinotesAuthenticationActivity">

        </activity>
        <activity
            android:name=".NotesActivity"
            android:label="Mes notes"
            android:theme="@style/Theme.EPINOTES.Fullscreen" />
        <activity
            android:name=".ExamensActivity"
            android:theme="@style/Theme.EPINOTES.NoActionBar" />
        <activity
            android:name=".EpimessagesActivity"
            android:theme="@style/Theme.EPINOTES.NoActionBar" />
        <activity
            android:name=".ParametresActivity"
            android:theme="@style/Theme.EPINOTES.NoActionBar" />
        <activity
            android:name=".UploadActivity"
            android:label="Uploader un cours"
            android:theme="@style/Theme.EPINOTES.Fullscreen" />
        <activity
            android:name=".CoursDuJourActivity"
            android:label="Cours du jour"
            android:theme="@style/Theme.EPINOTES.Fullscreen" />
        <activity
            android:name=".AnnalesEtFichesActivity"
            android:label="Annales et fiches"
            android:theme="@style/Theme.EPINOTES.Fullscreen" />
        <activity
            android:name=".SuggestionActivity"
            android:label="@string/title_activity_suggestion"
            android:theme="@style/Theme.EPINOTES.NoActionBar" />
        <activity
            android:name=".WebSiteActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_web_site"
            android:theme="@style/Theme.EPINOTES.Fullscreen" />
        <activity
            android:name=".EpinotesAccueilActivity"
            android:theme="@style/Theme.EPINOTES.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.EPINOTES.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>